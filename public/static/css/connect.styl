body
    background-color #f6f6f6;
    font-size 14px
    margin 0px

.mtop8
    margin-top 8px
.mtop16
    margin-top 16px
.box
    background-color #fff;
    border-radius 8px
    border 1px solid #d6d6d6
    position: absolute
    padding 16px
    width: 500px
    .btn-success
        background-color #1398d6
        border 0px
        width 100%
        &:hover
            background-color #0F78A9
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    // .inside
    //     padding 16px
    .header
        a
            img
                display block
                margin 0px auto
                padding 16px
                width 50%
    .footer
        text-align center
        a
            display inline-block
            font-size: .8em
            &:last-child
                margin-left: 24px

.box-login
    left calc(50% - 250px)
    top calc(50% - 181px)
.box-register
    left calc(50% - 250px)
    top calc(50% - 318px)
